# Clerk (Next.js)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=YOUR_PUBLISHABLE_KEY
CLERK_SECRET_KEY=YOUR_SECRET_KEY

# Clerk sign-in/sign-up redirect URLs (optional, Clerk defaults work)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up

# Convex
# Dev: https://adept-gecko-652.convex.site
# Prod: https://clever-salamander-182.convex.site
NEXT_PUBLIC_CONVEX_URL=https://adept-gecko-652.convex.site

# Clerk issuer domain (for Convex auth.config.ts)
# Get this from your Clerk dashboard -> JWT Templates
# Example: https://your-instance.clerk.accounts.dev
CLERK_ISSUER_DOMAIN=https://YOUR_CLERK_INSTANCE.clerk.accounts.dev

# PCG API (apps/api)
# Get free key at https://console.groq.com
GROQ_API_KEY=gsk_your_groq_api_key_here
# Random secret for HMAC signing levels (generate with: openssl rand -hex 32)
LEVEL_SIGNING_SECRET=your_random_secret_here
