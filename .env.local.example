# Clerk (Next.js)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=YOUR_PUBLISHABLE_KEY
CLERK_SECRET_KEY=YOUR_SECRET_KEY

# Clerk sign-in/sign-up redirect URLs (optional, Clerk defaults work)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up

# Convex
# Dev: https://adept-gecko-652.convex.site
# Prod: https://clever-salamander-182.convex.site
NEXT_PUBLIC_CONVEX_URL=https://adept-gecko-652.convex.site

# Playproof SDK (client-side)
# Used by the dashboard/observability page for LiveKit agent testing.
NEXT_PUBLIC_PLAYPROOF_API_URL=http://localhost:3000
NEXT_PUBLIC_PLAYPROOF_CLIENT_KEY=YOUR_PLAYPROOF_API_KEY
NEXT_PUBLIC_PLAYPROOF_DEPLOYMENT_ID=YOUR_DEPLOYMENT_ID

# Clerk issuer domain (for Convex auth.config.ts)
# Get this from your Clerk dashboard -> JWT Templates
# Example: https://your-instance.clerk.accounts.dev
CLERK_ISSUER_DOMAIN=https://YOUR_CLERK_INSTANCE.clerk.accounts.dev

# LiveKit (for real-time telemetry transport)
# NOTE: These credentials should be set in the Convex Dashboard environment variables,
# not in .env.local for the Next.js app. The values below are for reference only.
# Set LIVEKIT_URL, LIVEKIT_API_KEY, and LIVEKIT_API_SECRET in the Convex Dashboard.
#
# Example values (do not use in production):
# LIVEKIT_URL=wss://your-livekit-instance.livekit.cloud
# LIVEKIT_API_KEY=your-api-key
# LIVEKIT_API_SECRET=your-api-secret
